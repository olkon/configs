colorscheme slate

set number
set linebreak
set showbreak=+++
set textwidth=100
set virtualedit=block

set hlsearch
set smartcase
set ignorecase
set incsearch

set autoindent
set expandtab
set shiftwidth=2
set smartindent
set softtabstop=2

set ruler
set mouse+=a

set undolevels=1000
set backspace=indent,eol,start
